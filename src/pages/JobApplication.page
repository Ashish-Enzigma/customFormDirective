                          <td>
                                   <apex:inputField value="{!Candidate_Ashish__c.State__c}" /> 
                          </td>
                      </tr>                
                       
                      <tr>
                          <td>
                                  <b><apex:outputLabel value="Expected Salary Range" /></b>
