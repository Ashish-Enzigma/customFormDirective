                    <div style="float:center;width:100%;border: 1px solid black;">
                      <tr>
                          <td>
                                  <b><apex:outputLabel value="Salutation"/></b>
                          </td>
                          <td>
                                  <apex:inputField value="{!Candidate_Ashish__c.Salutation__c}" />    
                          </td>
                      </tr>
                      <tr>
                          <td>
                                  <b><apex:outputLabel value="Candidate_Name"/></b>
                          </td>
                          <td>
                                  <apex:inputField value="{!Candidate_Ashish__c.Name}" />    
                          </td>
                      </tr>
                      
                      <tr>
                          <td>
                                  <b><apex:outputLabel value="First Name "/></b>
                          </td>
                          <td>
                                  <apex:inputField value="{!Candidate_Ashish__c.First_Name__c}" />    
                          </td>
                      </tr>
                      
                       <tr>
                          <td>
                                  <b><apex:outputLabel value="Last Name"/></b>
                          </td>
                          <td>
